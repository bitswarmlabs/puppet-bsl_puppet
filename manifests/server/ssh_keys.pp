class bsl_puppet::server::ssh_keys {
  File[$::puppet::server_dir]
  ->
  file { "${::puppet::server_dir}/ssh":
    ensure => directory,
    owner  => $::puppet::server_user,
    group  => $::puppet::server_group,
    mode   => '0700',
  }

  sshkey { 'github.com':
    key    => '',
    target => '/etc/ssh/ssh_known_hosts',
    type   => 'ssh-rsa',
  }
}